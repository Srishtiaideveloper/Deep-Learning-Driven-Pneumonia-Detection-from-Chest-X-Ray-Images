import os
import matplotlib.pyplot as plt
from PIL import Image
import seaborn as sns
import pandas as pd
DATA_DIR = "data/chest_xray/train"

NORMAL_DIR = os.path.join(DATA_DIR, "NORMAL")
PNEUMONIA_DIR = os.path.join(DATA_DIR, "PNEUMONIA")

print("Normal images:", len(os.listdir(NORMAL_DIR)))
print("Pneumonia images:", len(os.listdir(PNEUMONIA_DIR)))
classes = ["Normal", "Pneumonia"]
counts = [
    len(os.listdir(NORMAL_DIR)),
    len(os.listdir(PNEUMONIA_DIR))
]

df = pd.DataFrame({
    "Class": classes,
    "Count": counts
})

sns.barplot(x="Class", y="Count", data=df)
plt.title("Class Distribution in Training Dataset")
plt.show()
def show_sample_images(folder, title):
    images = os.listdir(folder)[:5]
    plt.figure(figsize=(12,3))
    
    for i, img_name in enumerate(images):
        img_path = os.path.join(folder, img_name)
        img = Image.open(img_path)
        
        plt.subplot(1,5,i+1)
        plt.imshow(img, cmap="gray")
        plt.axis("off")
    
    plt.suptitle(title)
    plt.show()

show_sample_images(NORMAL_DIR, "Normal Chest X-rays")
show_sample_images(PNEUMONIA_DIR, "Pneumonia Chest X-rays")
img = Image.open(os.path.join(NORMAL_DIR, os.listdir(NORMAL_DIR)[0]))
print("Image size:", img.size)
